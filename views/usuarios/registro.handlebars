<h2>Crie sua conta</h2>
<hr />
<div class="card">
  <div class="card-body">

    <form action="" method="POST">

      <label for="nome">Nome:</label>
      <input type="text" name="nome" class="form-control" />

      <label class="mt-2" for="email">Email:</label>
      <input type="email" name="email" class="form-control" />

      <label class="mt-2" for="senha">Senha:</label>
      <input type="password" name="senha" class="form-control" />

      <label class="mt-2" for="senha2">Repita sua senha:</label>
      <input type="password" name="senha2" class="form-control" />

      <button type="submit" class="btn mt-3" style="background-color: #005293; color: #ffffff;">Criar conta</button>

    </form>

  </div>
</div>